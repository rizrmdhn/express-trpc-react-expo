{
  "name": "@rizrmdhn/web",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm with-env tsc -b && vite build",
    "dev": "pnpm with-env tsc -b --watch & vite",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "lint": "eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "preview": "vite preview",
    "sort:package": "pnpm dlx sort-package-json",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "react": "catalog:react18",
    "react-dom": "catalog:react18"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@rizrmdhn/eslint-config": "workspace:*",
    "@rizrmdhn/prettier-config": "workspace:*",
    "@rizrmdhn/tsconfig": "workspace:*",
    "@types/react": "catalog:react18",
    "@types/react-dom": "catalog:react18",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "catalog:",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vite": "^6.1.0"
  }
}
